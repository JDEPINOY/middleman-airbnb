<!-- source/flats/show.html.erb -->


<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- banner definition -->
<div class="banner-city" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); ">
</div>

<div class=container>
  <div class= "row">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="header-flat-owner" text-center>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", id:"avatar"%>
        <p><%= flat.name %></p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4">
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
      <p class="rating">
        <% flat.rating.to_i.times do %>
            <i class="fa fa-star" style="color: #ffb400"></i>
        <% end %>
      </p>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class= "header-flat">
        <div class="header-flat-details">
          </div>
            <h4>Book this flat</h4>
            <div class="form-group">
              <input type="text" class="form-control"  placeholder="Checkin">
              <input type="text" class="form-control"  placeholder="Checkout">
            </div>
            <button type="submit" class="btn btn-danger mb-2">Book it</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Inject flat data in template -->


